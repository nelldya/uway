jQuery(function()
{
	// 0원 결제 안내
	jQuery("#DIV_ZEROPAY_ALERT_CONTENTS").outerWidth(jQuery("#wrapcontents").innerWidth());


	//오즈 출력물
	$("a[id^=id_ozprint_]").on('click', function() {
		var title = $('span', this).text();
		var arg = $(this).attr('data-param-arg');
		var attr = 'toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=1,';
		var width = $(this).attr('winwidth');
		var height = $(this).attr('winheight');
		window.open(arg, title, attr+'width='+width+',height='+height );
		return false;
	});
});

function alertZeroPay()
{
	$("#DIV_ZEROPAY_ALERT_BG, #DIV_ZEROPAY_ALERT").toggle();
}

function requestZeroPay(obj)
{
	winpost
	(
		'/certify/'+jsft_getBinarycd()+'/index/'+jQuery(obj).attr('data-param-arg'),
		'',
		'본인인증',
		600,
		470,
		"toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=no,resizable=no,loadhidden=yes"
	);
	var $tempwin = jQuery('#id_'+getWinName('본인인증')).dialog();
	var $bgcolor = jQuery(obj).attr('data-param-color');
	$tempwin.parent().css('background-color',$bgcolor);
	$tempwin.parent().find('.ui-dialog-titlebar').css('background-color',$bgcolor).css('border','none');
	$tempwin.css('background-color',$bgcolor).css('overflow','hidden');
	$("#DIV_ZEROPAY_ALERT_BG, #DIV_ZEROPAY_ALERT").toggle();
	$tempwin.parent().find('.ui-widget-header > .ui-dialog-titlebar-close').css({'margin':'0','top':'7px','right':'7px','position':'absolute','border':'none !important'});
	$tempwin.parent().find('.ui-widget-header > .ui-dialog-titlebar-close > .ui-icon-closethick').css({'background-image':'url("/image/common/i_close.png")','background-position':'0 0','width':'20px','height':'20px'});
	$tempwin.parent().find('.ui-widget-header > a.ui-dialog-titlebar-close').removeClass('ui-dialog-titlebar-close ui-corner-all').mouseover(function(){$(this).css('border','none');});
	$tempwin.parent().find('.ui-widget-header > .ui-dialog-title').css({'color':'white','font-size':'14px','line-height':'16px'});
}

